<h1 class="title">Welcome</h1>
<h2 class="secondtitle">Doesn't have an account yet?</h2>

<form action="/login">
    <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Login">
    </div>
</form>

<p class="or">OR</p>

<form action="/signup">
    <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Sign Up">
    </div>
</form>

<h2>Agregar productos</h2>

<form>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Name</span>
        </div>
        <input id="name" type="text" class="form-control" aria-label="Name">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input id="price" type="text" class="form-control" aria-label="Price">
    </div>
    <div class="form-group">
        <input id="saveProduct" class="btn btn-success my-3" type="submit" value="Guardar">
    </div>
</form>

<h2>Lista</h2>
<div>
    <table class="table table-sm table-dark">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
        </tr>
    </thead>
    <tbody id="lista">
    </tbody>
</table>
</div>

    <section class="second">
        <h2>My First Chat App</h2>
